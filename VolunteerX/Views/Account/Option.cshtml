@model OptionViewModel

@{
    ViewData["Title"] = "Option";
}


<br />
<ul class="nav justify-content-center">
    <li class="nav-item">
        <a class="nav-link" asp-controller="Manage" asp-action="Index">Основна панель</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Option">Налаштування користувача</a>
    </li>
</ul>
<br />
<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <div class="container">
            <h2 class="text-center">Налаштування</h2>
            <form asp-controller="Account" asp-action="Option" method="post">
                <div class="form-group">
                    <label asp-for="Name">Ім'я:</label>
                    <input asp-for="Name" class="form-control" placeholder="Введіть ім'я">
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Прізвище:</label>
                    <input asp-for="Surname" class="form-control" placeholder="Введіть прізвище">
                </div>
                <div class="form-group">
                    <label asp-for="Email">Електронна пошта:</label>
                    <input asp-for="Email" class="form-control" placeholder="Введіть електронну пошту">
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Мобільний номер:</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Введіть мобільний номер">
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword">Актуальний пароль:</label>
                    <input asp-for="NewPassword" class="form-control" placeholder="Введіть актуальний пароль">
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword">Новий пароль:</label>
                    <input asp-for="NewPassword" class="form-control" placeholder="Введіть новий пароль">
                </div>
                <button type="submit" class="btn btn-primary">Оновити</button>
            </form>
        </div>
        <br />
    </div>
    <div class="col-sm-4">
    </div>
</div>
